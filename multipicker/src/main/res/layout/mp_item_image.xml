<?xml version="1.0" encoding="utf-8"?>
<com.edwardstock.multipicker.internal.SquareConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".picker.ui.PickerActivity"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    >

    <View
        android:id="@+id/mp_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0"
        android:background="?attr/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:alpha=".5"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mp_image_view_root"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:animateLayoutChanges="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="1"
        app:layout_constraintWidth_percent="1"
        >

        <ImageView
            android:id="@+id/image_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/mp_content_desc_image"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/mp_image_placeholder"
            />

        <ImageView
            android:id="@+id/mp_file_type_icon"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHeight_percent=".18"
            app:layout_constraintHorizontal_bias="0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0"
            app:layout_constraintWidth_percent=".18"
            tools:src="@drawable/mp_ic_play_circle_filled"
            tools:visibility="visible"
            />

        <TextView
            android:id="@+id/mp_file_type_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="?attr/titleTextColor"
            android:textSize="@dimen/mp_font_small"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/mp_file_type_icon"
            app:layout_constraintStart_toEndOf="@id/mp_file_type_icon"
            app:layout_constraintTop_toTopOf="@id/mp_file_type_icon"
            tools:text="00:24:00"
            tools:visibility="visible"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/image_selection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="8dp"
        android:background="@drawable/mp_selection"
        android:gravity="center"
        android:minWidth="20dp"
        android:minHeight="20dp"
        android:alpha="0"
        tools:alpha="1"
        android:textColor="@color/mp_colorTextPrimary"
        app:layout_constraintDimensionRatio="W,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".17"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".17"

        />

</com.edwardstock.multipicker.internal.SquareConstraintLayout>
