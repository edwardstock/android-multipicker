<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="mp_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mp_colorPrimary</item>
        <item name="colorPrimaryDark">@color/mp_colorPrimaryDark</item>
        <item name="colorAccent">@color/mp_colorAccent</item>
        <item name="android:titleTextColor" tools:targetApi="m">@color/mp_textColorSecondary</item>
        <item name="titleTextColor">@color/mp_textColorSecondary</item>
        <item name="android:textColorPrimary">@color/mp_textColorPrimary</item>
        <item name="android:textColorSecondary">@color/mp_textColorSecondary</item>
        <item name="android:colorBackground">@color/mp_colorBackground</item>

        <!-- enable window content transitions -->
        <item name="android:windowActivityTransitions" tools:targetApi="lollipop">true</item>

    </style>

    <style name="mp_ExoMediaButton_Play" parent="ExoMediaButton.Play">
        <item name="android:src">@drawable/mp_ic_play_circle_filled</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">76dp</item>
    </style>

    <style name="mp_ExoMediaButton_Pause" parent="ExoMediaButton.Pause">
        <item name="android:src">@drawable/mp_ic_pause_circle_filled</item>
        <item name="android:layout_width">76dp</item>
        <item name="android:layout_height">76dp</item>
    </style>

    <style name="mp_toolbar" parent="mp_AppTheme">
        <item name="background">@color/mp_colorPrimary</item>
        <item name="drawerArrowStyle">@style/mp_DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/mp_colorControlNormal</item>
    </style>

    <style name="mp_toolbar_dark" parent="mp_Dark">
        <item name="background">@color/mp_black_alpha_50</item>
        <item name="drawerArrowStyle">@style/mp_DrawerArrowStyle</item>
        <item name="colorControlNormal">@color/mp_colorControlNormal</item>
    </style>

    <style name="mp_Dark" parent="Theme.AppCompat.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:subtitleTextColor" tools:targetApi="m">@android:color/white</item>
        <item name="subtitleTextColor">@android:color/black</item>
        <item name="actionOverflowButtonStyle">@style/mp_Dark.Menu</item>

        <!--<item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>-->
        <!--<item name="windowActionBarOverlay">true</item>-->
        <!--<item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>-->
        <!--<item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>-->
    </style>

    <style name="mp_Dark.Menu" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="tint">@color/mp_white</item>
    </style>

    <style name="mp_DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
